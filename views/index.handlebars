<script>
  if ({{ restaurants.length }} === 0) {
    alert(`Cannot find restaurant with keyword  + {{ keyword }}`)
  }
</script>



<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
    <div class="create"> <input type="button" value="Create" onclick="location.href='./restaurants/new'"></div>
    {{!-- <a href="./restaurants/new">Create</a> --}}

  </div>
</div>






<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-12 col-12 mx-auto ">
      <div class="card-columns blockDiv">
        {{#each restaurants}}
        <div class="block card-component">
          <a href="./restaurants/{{this._id}}" class="text-secondary ">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="無法顯示的餐廳">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
              <div class="control-panel ">
                <input class="control-panel-component"type="button" value="detail" onclick="location.href='./restaurants/{{ this._id }}'">
                <input class="control-panel-component"type="button" value="edit" onclick="location.href='./restaurants/{{ this._id }}/edit'">
                <form class="control-panel-component" action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                  <button type="submit">delete</button>
                </form>
              </div>
            </div>
          </a>
        </div>

        {{/each}}
      </div>
    </div>
  </div>
</div>